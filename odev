#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>

int main() {
    char harf;
    int i;
    int max_bosluk = 30; //bosluk sayisi

    printf("Bir harf girin: ");
    scanf(" %c", &harf);

    while(1) {
        //sağ
        for(i = 0; i <= max_bosluk; i++) {
            for(int j = 0; j < i; j++)
            printf(" ");
            printf("%c\n", harf);
            usleep(10000);//bekleme süresi
        }
        //sol
        for(i = max_bosluk-1; i > 0; i--) {
            for(int j = 0; j < i; j++) printf(" ");
            printf("%c\n", harf);
            usleep(10000);//bekelme süresi
        }
    }

    return 0;
}
